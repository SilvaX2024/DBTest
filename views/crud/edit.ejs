<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Editing: <%= crud.filesName %> <%= crud.folderName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/home" class="btn btn-sm btn-secondary">Back</a>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/home">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= crud.filesName %> <%= crud.folderName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(crud.updatedAt).toUTCString() %></b>
      <b>Folder:</b> <%= crud._id %>
    </div>
  </div>
</div>

<form action="/edit/<%= crud._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="filesName">Files Name</label>
      <input
        type="text"
        class="form-control"
        id="filesName"
        name="filesName"
        value="<%= crud.filesName %>"
        placeholder="Files Name"
        required
      />
    </div>

    <div class="col">
      <label for="folderName">Folder Name</label>
      <input
        type="text"
        class="form-control"
        id="folderName"
        name="folderName"
        value="<%= crud.folderName %>"
        placeholder="Folder Name"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="website">Website</label>
      <input
        type="text"
        class="form-control"
        id="website"
        name="website"
        value="<%= crud.website %>"
        placeholder="Website"
        required
      />
    </div>

    <div class="col">
      <label for="email">Email</label>
      <input
        type="text"
        class="form-control"
        id="email"
        name="email"
        value="<%= crud.email %>"
        placeholder="Email"
        required
      />
    </div>
  </div>

  <div class="form-group mb-4">
    <label for="details">Details</label>
    <textarea
      class="form-control"
      name="details"
      id="details"
      cols="30"
      rows="12"
      placeholder="Details"
    >
<%= crud.details %></textarea
    >
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update File</button>
  </form>
    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete File
    </button>
  </div>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a File record.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the File record of
          <b class="fw-bold"><%= crud.filesName %> <%= crud.folderName %></b
          ><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/edit/<%= crud._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove File
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
